<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mac.musicwiki">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/musicwiki"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeMusicWiki">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="47e5d34f4ea980269165802661cec65034db3121" />

        <activity
            android:name=".search.view.SearchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".album.view.AlbumActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".favorites.view.FavoritesActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".favorites.view.DeleteFavActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>